  <hr />
  <ul class="nav flex-column" aria-label="Common tasks">
    <li class="nav-item">
      <%= link_to "Create an ad", new_advertisement_path, class: "nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to "Create a client", new_client_path, class: "nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to "Add a new position", new_position_path, class: "nav-link active" %>
